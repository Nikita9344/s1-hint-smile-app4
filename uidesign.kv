<LoginScreen>:
    GridLayout:
        cols: 1 
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "Sign In"
                font_size: "30sp"
            TextInput:
                id: username
                hint_text: "Enter Username"
            TextInput:
                id: password
                password: True
                hint_text: "Enter Password"
            RelativeLayout:
                Button:    
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
            Label:
                id: login_wrong 
                text: ""

        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password?"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 247, 153, 153, 1
            Button:
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 247, 153, 153, 1
                text:"Sign Up"
                on_press: root.sign_up()  # refers to the rule class

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "Sign up to enjoy the fun content"

        TextInput:
            id: username
            hint_text: "Enter Username"
        TextInput:
            id: password
            hint_text: "Enter Password"
        Button:   
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)


<SignUpScreenSuccess>:
    GridLayout
        cols: 1
        Label:
            text: "Sign up successful!"
        Button:
            text: "Login page"
            on_press: root.go_to_login()


<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 30, 30
            spacing: 30, 30
            RelativeLayout:    
                Button:
                    text: "Logout"
                    on_press: root.log_out()
            Label:
                text: "How are you feeling now?"
            TextInput:
                id: feeling
                hint_text: "Enter : positve, negative, unbeloved, motivational..."
            Button:
                text: "Enlighten me"
                on_press: root.get_quote(root.ids.feeling.text)
            Label:
                id: quote
                text: ""
                
        GridLayout:
            cols: 1
            size_hint: 0.05, 0.05
            Label:
                text: "Choose one option to have fun"


        GridLayout:
            size_hint: 0.2, 0.2
            cols: 2
            
            Button:
                id: video
                text: "Videos"
                # on_press: root.open_video_link()
                on_press: root.open_link(root.ids.video.text)
            Button:
                id: meme
                text: "Memes"
                # on_press: root.open_meme_link()
                on_press: root.open_link(root.ids.meme.text)


# to list all the screens
<RootWidget>
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"

